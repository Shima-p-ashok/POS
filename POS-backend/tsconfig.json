{
  "compilerOptions": {
    /* === File Layout === */
    "rootDir": "./src",
    "outDir": "./dist",

    /* === Environment Settings === */
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ESNext"],
    "types": ["node"],

    /* === Output === */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* === Type Checking === */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* === Module Resolution === */
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,

    /* === Style / Performance === */
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
